<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="company_form_view">
            <field name="name">Add populate button to ldap view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="auth_ldap.company_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form[@string='LDAP Configuration']" position="inside">
                    <separator string="Populate user database" colspan="4"/>
                    <field name="deactivate_unknown_users" colspan="4" />
                    <group attrs="{'invisible': [('deactivate_unknown_users', '=', False)]}" colspan="4">
                        <label string="Except following users" colspan="4" />
                        <field name="no_deactivate_user_ids" colspan="4" nolabel="1" />
                    </group>
                    <button name="populate_wizard"
                            string="Populate"
                            type="object"
                            colspan="2"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
