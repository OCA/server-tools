<?xml version="1.0" ?>
<odoo>
        <record id="dbf_file_proccess_view" model="ir.ui.view">
            <field name="name">Select DBF file to proccess</field>
            <field name="model">dbftocsv.filedbf</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Select DBF file">
                    <h2>Select a DBF file to proccess</h2>
                    <field name="data_file" filename="filename" placeholder="Choose a DBF file ..."/>
                    <field name="filename" invisible="1"/>
                    <footer>
                        <button name="proccess_file" string="_Process" type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="dbf_file_proccess" model="ir.actions.act_window">
            <field name="name">DBF file proccess</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dbftocsv.filedbf</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="dbf_file_proccess_view"/>
        </record>

        <menuitem name="DBF to CSV"
                  id="dbf2csv_parent_menu"
                  parent = "base.menu_administration"
                  sequence="10"
                  action="dbf_file_proccess"
        />

        <menuitem name="DBF to CSV"
                  id="dbf2csv_child_menu"
                  parent = "dbf2csv_parent_menu"
                  sequence="10"
                  action="dbf_file_proccess"
        />
</odoo>
