<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_xlsx_template_form" model="ir.ui.view">
        <field name="model">xlsx.template</field>
        <field name="inherit_id" ref="excel_import_export.view_xlsx_template_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[3]" position="after">
                <page string="Settings">
                    <group>
                        <field name="available_on_mail" />
                        <field
                            name="mail_template_ids"
                            widget="many2many_tags"
                            attrs="{'invisible': [('available_on_mail', '=', False)]}"
                        />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
