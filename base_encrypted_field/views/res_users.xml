<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_users_form_simple_modif" model="ir.ui.view">
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form_simple_modif" />
            <field name="arch" type="xml">
                <xpath expr="//footer" position="before">
                    <group name="base_encrypted_field" string="PGP settings">
                        <field name="pgp_public_key" />
                        <field name="pgp_private_key" />
                        <div>
                            <a class="oe_button oe_link" href="javascript:openerp.base_encrypted_field.update_pgp_keys()">
                                <span>Update PGP keys</span>
                            </a>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="view_users_form" model="ir.ui.view">
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="base_encrypted_field" string="PGP settings">
                        <group>
                            <field name="pgp_public_key" />
                            <field name="pgp_private_key" />
                            <div>
                                <a class="oe_button oe_link" href="javascript:openerp.base_encrypted_field.update_pgp_keys()">
                                    <span>Update PGP keys</span>
                                </a>
                            </div>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
