<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="form_base_encrypted_field_get_passphrase" model="ir.ui.view">
            <field name="model">base.encrypted.field.get.passphrase</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="passphrase" />
                    </group>
                    <footer>
                        <button name="button_save" type="object" string="Unlock" class="oe_highlight" />
                        or
                        <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="action_base_encrypted_field_get_passphrase"
            name="Fill in the passphrase for your PGP key"
            res_model="base.encrypted.field.get.passphrase"
            target="new"
            view_type="form"
            view_mode="form"
            />
    </data>
</openerp>
