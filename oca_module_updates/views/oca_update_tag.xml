<odoo>

    <record model="ir.ui.view" id="oca_update_tag_form_view">
        <field name="model">oca.update.tag</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="oca_update_tag_search_view">
        <field name="model">oca.update.tag</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="oca_update_tag_tree_view">
        <field name="model">oca.update.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="oca_update_tag_act_window">
        <field name="name">Tags</field>
        <field name="res_model">oca.update.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="oca_update_tag_menu">
        <field name="name">Tags</field>
        <field name="parent_id" ref="menu_oca_updates_config_root" />
        <field name="action" ref="oca_update_tag_act_window" />
        <field name="sequence" eval="20" />
    </record>

</odoo>
