<odoo>

    <record id="view_view_form_multi_localization" model="ir.ui.view">
        <field name="name">ir.ui.view form multi localization</field>
        <field name="model">ir.ui.view</field>
        <field name="inherit_id" ref="base.view_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[1]/group[2]" position="after">
                <group colspan="4">
                    <field name="localization_ids" widget="many2many_tags" options="{'no_create': True}" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
