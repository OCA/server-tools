<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_rule_form" model="ir.ui.view">
        <field name="name">AND rule checkbox</field>
        <field name="model">ir.rule</field>
        <field name="inherit_id" ref="base.view_rule_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='global']" position="after">
                <field
                    name="and_rule"
                    string="AND rule"
                    attrs="{'invisible': [('global', '=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
