<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="transbot_log_tree" model="ir.ui.view">
            <field name="name">Transbot log tree</field>
            <field name="model">transbot.log</field>
            <field name="arch" type="xml">
                <tree string="Transbot log" colors="gray: type == 'debug'; red: type == 'error'">
                    <field name="date"/>
                    <field name="type"/>
                    <field name="log"/>
                    <field name="project"/>
                </tree>
            </field>
        </record>

        <record id="action_transbot_log" model="ir.actions.act_window">
            <field name="name">Logs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">transbot.log</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_transbot_log" action="action_transbot_log" parent="menu_transbot" sequence="2"/>

    </data>
</openerp>
