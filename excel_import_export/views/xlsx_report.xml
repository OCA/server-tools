<odoo>
    <record id="xlsx_report_view" model="ir.ui.view">
        <field name="name">xlsx.report.view</field>
        <field name="model">xlsx.report</field>
        <field name="arch" type="xml">
            <form string="Excel Report">
                <!-- search criteria -->
                <group name="criteria" invisible="state != 'choose'">
                </group>
                <!-- xlsx.report common field -->
                <div name="xlsx.report">
                    <field name="state" invisible="1" />
                    <field name="name" invisible="1" />
                    <field name="choose_template" invisible="1" />
                    <div invisible="state != 'choose'">
                        <label
                            string="Choose Template: "
                            for="template_id"
                            invisible="not choose_template"
                        />
                        <field name="template_id" invisible="not choose_template" />
                    </div>
                    <div invisible="state != 'get'">
                        <h2>
                            Complete Prepare Report (.xlsx)
                        </h2>
                        <p colspan="4">
                            Here is the report file:
                            <field name="data" filename="name" class="oe_inline" />
                        </p>
                    </div>
                    <footer invisible="state != 'choose'">
                        <button
                            name="report_xlsx"
                            string="Execute Report"
                            type="object"
                            class="oe_highlight"
                        />
                        or
                        <button
                            special="cancel"
                            string="Cancel"
                            type="object"
                            class="oe_link"
                        />
                    </footer>
                    <footer invisible="state != 'get'">
                        <button special="cancel" string="Close" type="object" />
                    </footer>
                </div>
            </form>
        </field>
    </record>
</odoo>
