<odoo>

    <record id="base_config_settings" model="ir.ui.view">
        <field name="name">Letsencrypt base config settings</field>
        <field name="model">base.config.settings</field>
        <field name="inherit_id" ref="base_setup.view_general_configuration" />
        <field name="arch" type="xml">
            <xpath expr="./group[last()]" position="after">
                <group name="letsencrypt">
                    <group name="letsencrypt" string="LetsEncrypt">
                        <field
                            name="needs_dns_provider"
                            readonly="1"
                            invisible="1"/>
                        <field
                            name="dns_provider"
                            attrs="{'required': 
                            [('needs_dns_provider', '=', True)]}" />
                        <field
                            name="script"
                            attrs="{
                                'required': [('dns_provider', '=', 'shell')],
                                'invisible': [('dns_provider', '!=', 'shell')],
                                }" />
                        <field name="altnames" />
                        <field name="reload_command" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
