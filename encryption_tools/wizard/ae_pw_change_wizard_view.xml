<openerp>
    <data>
        <record id="ae_pw_change_wiz_view" model="ir.ui.view">
            <field name="name">ae.pw.change.wizard.view</field>
            <field name="model">ae.pw.change.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h3>
                            <label string="Do not lose this password. If you do, you will not be able to retreive any values encrypted with it. " />
                        </h3>
                        <group>
                            <field name="old_password" required="1" />
                        </group>
                        <group col="4">
                            <field name="password" required="1" />
                            <field name="password_verify" required="1" string="Verify" />
                            <separator colspan="4" />
                            <button class="oe_highlight" type="object" string="Change Password" name="do_change_pass" colspan="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>
