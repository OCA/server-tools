<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- TODO: Automated Actions default filter excluding rules ib rulesets -->
        <!-- Action Rule Form View -->
        <record id="view_base_action_rule_form" model="ir.ui.view">
            <field name="name">base.action.rule.form.agent</field>
            <field name="model">base.action.rule</field>
            <field name="inherit_id" ref="base_action_rule.view_base_action_rule_form"/>
            <field name="arch" type="xml">

                <field name="model_id" position="after">
                    <field name="runas_user_id" />
                </field>
                <field name="active" position="before">
                    <field name="ruleset_id" />
                </field>
                <field name="filter_id" position="after">
                    <field name="fact_ids" widget="many2many_tags"
                           context="{'default_model_id': model_id}" />
                    <field name="filter_expr" />
                </field>

            </field>
        </record>

        <record id="view_base_action_rule_tree" model="ir.ui.view">
            <field name="name">base.action.rule.tree.agent</field>
            <field name="model">base.action.rule</field>
            <field name="inherit_id" ref="base_action_rule.view_base_action_rule_tree"/>
            <field name="arch" type="xml">

                <field name="name" position="after">
                    <field name="ruleset_id" />
                </field>
                <field name="filter_id" position="after">
                    <field name="fact_ids" widget="many2many_tags" />
                </field>

            </field>
        </record>

    </data>
</openerp>
