<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.attachment.delete.restrict</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='user_default_rights']" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="gift_card_settings"
                    title="Restrict Deletion on attachment"
                >
                    <div class="o_setting_right_pane">
                        <label for="restrict_delete_attachment" />
                        <div class="text-muted">
                            Select level of delete restriction on attachments
                        </div>
                        <div class="mt8">
                            <field
                                name="restrict_delete_attachment"
                                class="o_light_label"
                                widget="radio"
                                required="True"
                            />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
