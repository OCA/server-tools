<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<record id="wizard_test_sentry_view_form" model="ir.ui.view">
    <field name="model">wizard.test.sentry</field>
    <field name="arch" type="xml">
        <form string="Label">
            <group>
                <group string="Test Delay" name="test_delay">
                    <button name="test_http_delay" type="object" string="HTTP delay" />
                    <button name="test_db_delay" type="object" string="DB delay" />
                    <button name="test_all" type="object" string="ALL delay" />
                </group>
                <group string="Test Error" name="test_crash">
                    <button name="test_crash" type="object" string="Test Crash" />
                </group>
            </group>
        </form>
    </field>
</record>

<record model="ir.actions.act_window" id="wizard_test_sentry_action">
    <field name="name">Wizard Test Sentry</field>
    <field name="res_model">wizard.test.sentry</field>
    <field name="view_mode">form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
</record>

<menuitem
        id="wizard_test_sentry_menu"
        parent="base.menu_administration"
        sequence="20"
        action="wizard_test_sentry_action"
    />

</odoo>
