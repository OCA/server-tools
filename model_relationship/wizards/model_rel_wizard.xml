<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record id="view_model_relationship_form" model="ir.ui.view">
    <field name="name">Models Relationship</field>
    <field name="model">model_rel_wizard</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field
                        name="source_model"
                        options="{'no_create': True, 'no_create_edit':True}"
                    />
          <field
                        name="target_model"
                        options="{'no_create': True, 'no_create_edit':True}"
                    />
          <field name="white_list_regex" />
          <field name="black_list_regex" />
          <field
                        name="ignore_models"
                        widget="many2many_tags"
                        options="{'no_create': True, 'no_create_edit':True}"
                    />
        </group>
        <group>
          <field name="image" widget="image" />
          <field name="mermaid" />
        </group>
        <footer>
          <button
                        name="get_rel"
                        string="Get relationship"
                        type="object"
                        class="btn-primary"
                    />
          <button string="Cancel" class="btn-secondary" special="cancel" />
        </footer>
      </form>
    </field>
  </record>

  <record id="action_model_relationship" model="ir.actions.act_window">
    <field name="name">Models Relationship</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">model_rel_wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <menuitem
        action="action_model_relationship"
        id="menu_model_rel_wizard"
        parent="base.next_id_9"
    />
</odoo>
