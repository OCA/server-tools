<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="ir_cron_view_form" model="ir.ui.view">
        <field name="name">ir.cron.view.form</field>
        <field name="model">ir.cron</field>
        <field name="inherit_id" ref="base.ir_cron_view_form"/>
        <field name="arch" type="xml">
            <field name="nextcall" position="before">
                <field name="dst_offset" invisible="1"/>
                <field name="tz"/>
            </field>
        </field>
    </record>

    <record id="ir_cron_view_tree" model="ir.ui.view">
        <field name="model">ir.cron</field>
        <field name="inherit_id" ref="base.ir_cron_view_tree"/>
        <field name="arch" type="xml">
            <tree>
                <field name="tz" optional="hide"/>
            </tree>
        </field>
    </record>
</odoo>
