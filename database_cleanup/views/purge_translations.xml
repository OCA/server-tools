<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purge_translations_view" model="ir.ui.view">
        <field name="model">cleanup.purge.wizard.translation</field>
        <field name="inherit_id" ref="form_purge_wizard" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="action_purge_translations" model="ir.actions.server">
        <field name="name">Purge Translations</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="database_cleanup.model_cleanup_purge_wizard_translation" />
        <field name="code">action = env.get('cleanup.purge.wizard.translation').get_wizard_action()</field>
    </record>

    <record id="purge_translations_line_tree" model="ir.ui.view">
        <field name="model">cleanup.purge.line.translation</field>
        <field name="inherit_id" ref="tree_purge_line" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="value"/>
                <field name="res_id"/>
                <field name="lang"/>
                <field name="type"/>
                <field name="module"/>
                
                <field name="translation_id"/>
                <field name="reason"/>
            </field>
        </field>
    </record>

    <record id="action_purge_translations_line" model="ir.actions.server">
        <field name="name">Purge</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="database_cleanup.model_cleanup_purge_line_translation" />
        <field name="code">records.purge()</field>
        <field name="binding_model_id" ref="database_cleanup.model_cleanup_purge_line_translation" />
    </record>

</odoo>
